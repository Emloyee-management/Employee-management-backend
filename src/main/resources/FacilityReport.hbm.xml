<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bf.employee.entity.FacilityReport" table="FacilityReport" schema="employee">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="employeeId">
            <column name="employeeID" sql-type="int(11)"/>
        </property>
        <property name="reportDate">
            <column name="reportDate" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="status">
            <column name="status" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>