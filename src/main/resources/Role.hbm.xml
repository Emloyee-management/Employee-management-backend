<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bf.employee.entity.Role" table="Role" schema="employee">
        <id name="id">
            <column name="ID" sql-type="int(11)"/>
        </id>
        <property name="roleName">
            <column name="RoleName" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="description">
            <column name="Description" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="createDate">
            <column name="CreateDate" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="modificationDate">
            <column name="ModificationDate" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="lastModificationUser">
            <column name="LastModificationUser" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>