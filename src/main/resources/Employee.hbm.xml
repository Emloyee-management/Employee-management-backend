<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bf.employee.entity.Employee" table="Employee" schema="employee">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="personId">
            <column name="PersonID" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="title">
            <column name="Title" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="managerId">
            <column name="managerID" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="startDate">
            <column name="startDate" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="endDate">
            <column name="endDate" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="avatar">
            <column name="avatar" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="car">
            <column name="car" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="visaStatusId">
            <column name="visaStatusID" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="visaStartDate">
            <column name="visaStartDate" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="visaEndDate">
            <column name="visaEndDate" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="driverLicence">
            <column name="driverLicence" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="driverExpirationDate">
            <column name="driverExpirationDate" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="houseId">
            <column name="houseID" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>