<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bf.employee.entity.Facility" table="Facility" schema="employee">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="type">
            <column name="type" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="houseId">
            <column name="houseID" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>